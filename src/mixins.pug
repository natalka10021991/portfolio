mixin icon(name, className)
  - var icon = require(`images/icons/${name}.svg`);
  svg(class=className viewBox=icon.viewBox preserveAspectRatio="none")
    use(xlink:href=icon.url)

mixin image(path, className)
  img(src=require(`images/${path}`) class=className)

mixin nav(className, theme, items, blockClassName)
  nav(class=`${className} ${blockClassName} ${className}_${theme}`)
    ul(class=`${className}__list`)
      each item in items
        li(class=`${className}__item`)
          a.nav__link(class=`${className}__link` href='#')= item

mixin socials(className, theme, items)
  ul(class=`${className} ${className}_${theme} `)
    each item in items
      li(class=`${className}__item`)
        a(class=`${className}__link` href='#' target='_blank')
          +icon(`${item}`, `${className}__icon`)
