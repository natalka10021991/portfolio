.triangles {
	position: absolute;
	bottom: 100%;
	left: 0;
	right: 0;
	display: flex;
	color: #fff;

	@include phones {
		left: -500px;
		right: -500px;
	}

	&_reverse {
		bottom: auto;
		top: 0;

		.triangles-item {
			transform: rotate(180deg);
		}
	}
}

.triangles-item {
	width: 50%;
	height: 100px;
}